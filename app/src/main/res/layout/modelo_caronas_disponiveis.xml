<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:orientation="horizontal"
    android:paddingBottom="2dp"
    android:paddingTop="2dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/arredondado">

        <TextView
            android:id="@+id/tv_origem2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageView"
            android:layout_alignStart="@+id/tv_destino2"
            android:text="origem"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/primary_text"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_destino2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageView3"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/imageView"
            android:text="Destino"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/primary_text"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_horario2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_destino2"
            android:layout_alignTop="@+id/imageView3"
            android:text="00:00"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/primary_text"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_destino2"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/icon_passageiros"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/tv_vagas2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/textView5"
            android:layout_marginRight="17dp"
            android:layout_marginTop="5dp"
            android:text="0/0"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/primary_text"
            android:textSize="25dp" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_telefone"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="4dp"
            android:background="@color/divider" />

        <TextView
            android:id="@+id/tv_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/c_foto"
            android:text="Nome"
            android:textColor="@color/primary_text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/tv_telefone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_nome"
            android:layout_below="@+id/tv_nome"
            android:text="00"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_destino" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/view2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_origem" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_relogio" />

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_below="@id/tv_horario2"
            android:layout_marginTop="8dp"
            android:background="@color/divider" />

        <ImageView
            android:id="@+id/c_foto"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:layout_marginTop="4dp"
            android:src="@drawable/user" />

        <ImageView
            android:layout_width="20dp"
            android:layout_margin="4dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_atok"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:background="@color/icons"
            android:id="@+id/imageViewAndamento"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
             />

        <TableLayout
            android:id="@+id/LinearLayout02"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1"
            android:layout_below="@+id/view3">
            <TableRow>

            <Button
                android:id="@+id/b_comentar_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="@color/btnGeral"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:drawablePadding="4dp"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@drawable/icon_cmt"
                android:text="ComentÃ¡rios"
                />

            <Button
                android:id="@+id/b_solicitar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:textColor="@color/btnGeral"
                android:textStyle="bold"
                android:textSize="15dp"
                android:drawableLeft="@drawable/icon_carona"
                android:drawablePadding="4dp"
                android:background="?android:attr/selectableItemBackground"
                android:layout_gravity="center_horizontal"
                android:text=" Me Leva ! "
               />
        </TableRow>

        </TableLayout>
    </RelativeLayout>
</RelativeLayout>
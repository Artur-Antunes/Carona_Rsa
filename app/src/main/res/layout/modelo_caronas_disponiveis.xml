<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayout"
    android:layout_centerHorizontal="true"
    android:paddingTop="2dp"
    android:paddingBottom="2dp">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/fundo_carona"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:id="@+id/relativeLayout3">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Local de origem"
        android:id="@+id/tv_origem"
        android:layout_above="@+id/imageView"
        android:layout_alignStart="@+id/tv_destino"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Local de Destino"
        android:id="@+id/tv_destino"
        android:layout_above="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginLeft="10dp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="00:00pm"
        android:id="@+id/tv_horario"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignStart="@+id/tv_destino"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="VAGAS:"
        android:id="@+id/textView5"
        android:layout_alignBottom="@+id/tv_origem"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0/0"
        android:id="@+id/tv_vagas"
        android:layout_below="@id/textView5"
        android:layout_alignParentEnd="true"
        android:textSize="40dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/view2"
        android:layout_below="@id/tv_telefone"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="JosÃ© das Quantas"
        android:id="@+id/tv_nome"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/view2"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="99999999999"
        android:id="@+id/tv_telefone"
        android:textSize="10dp"
        android:layout_below="@+id/tv_nome"
        android:layout_alignStart="@+id/tv_nome" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:src="@drawable/icon_destino"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView2"
        android:layout_below="@+id/view2"
        android:layout_alignParentStart="true"
        android:src="@drawable/icon_origem"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView3"
        android:src="@drawable/icon_relogio"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SOLICITAR CARONA"
        android:id="@+id/b_solicitar"
        android:background="@drawable/cor_botao"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

</RelativeLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/c_foto"
        android:src="@drawable/user"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="10dp" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:orientation="horizontal"
    android:paddingBottom="2dp"
    android:paddingTop="2dp">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color3">


        <TextView
            android:id="@+id/tv_destino_ACEITO2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/c_foto"
            android:text="Nome"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/primary_text"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/c_foto"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="10dp" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:layout_alignParentStart="true"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/c_telefone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_destino_ACEITO2"
            android:layout_below="@+id/tv_destino_ACEITO2"
            android:text="89981"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_margin="4dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_atnot"
            android:layout_alignParentRight="true"
            android:background="@color/icons"
            android:id="@+id/imageViewAnd3"
            />

        <TextView
            android:id="@+id/textViewSt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text="ACEITO"
            android:textSize="16dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </RelativeLayout>

</RelativeLayout>
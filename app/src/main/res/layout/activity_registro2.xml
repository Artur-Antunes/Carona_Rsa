<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/fundo">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/foto_rg"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/user" />

        </LinearLayout>

        <TextView
            android:id="@+id/nome_sobrenome_rg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="NOME"
            android:textSize="20dp"
            android:textColor="@color/primary_text"
            android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ly11"
                android:layout_width="match_parent"
                android:layout_below="@+id/nome_sobrenome_rg"
                android:background="@drawable/arredondado"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/matri_icon" />

                <EditText
                    android:id="@+id/matricula_registro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/primary_text"
                    android:textColorHint="@color/secondary_text"
                    android:background="#00000000"
                    android:maxLength="8"
                    android:hint="MATRÍCULA"
                    android:inputType="numberSigned"
                    android:letterSpacing="0.1"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:background="@drawable/arredondado"
                android:layout_below="@+id/ly11"
                android:padding="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ct_icon" />

                <Switch
                    android:id="@+id/cnh_registro"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:hint="CNH"
                    android:textColor="@color/primary_text"
                    android:textColorHint="@color/secondary_text"
                    android:textOff="NÃO"
                    android:textOn="SIM" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:background="@drawable/arredondado"
                android:layout_below="@+id/ly2"
                android:padding="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/phone_icon" />

                <EditText
                    android:id="@+id/telefone_registro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text"
                    android:textColorHint="@color/secondary_text"
                    android:layout_marginLeft="15dp"
                    android:background="#00000000"
                    android:hint="TELEFONE"
                    android:inputType="numberSigned"
                    android:letterSpacing="0.1"
                    android:maxLength="14"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly4"
                android:layout_below="@+id/ly3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/arredondado"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/email_icon" />

                <EditText
                    android:id="@+id/email_registro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="#00000000"
                    android:hint="E-MAIL"
                    android:inputType="text"
                    android:textColor="@color/primary_text"
                    android:textColorHint="@color/secondary_text"
                    android:letterSpacing="0.1"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ly4"
                android:background="@drawable/arredondado"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/sex_icon" />

                <Spinner
                    android:id="@+id/sexo_registro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="#00000000"
                    android:letterSpacing="0.1"
                    android:prompt="@string/sexo_usuario"
                    android:textColor="@color/primary_text"
                    android:textColorHint="#69686b"
                    android:textSize="16dp"></Spinner>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ly5"
                android:background="@drawable/arredondado"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/pass_icon" />

                <EditText
                    android:id="@+id/senha_registro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:maxLength="16"
                    android:textColor="@color/primary_text"
                    android:textColorHint="@color/secondary_text"
                    android:background="#00000000"
                    android:hint="SENHA"
                    android:inputType="textPassword"
                    android:letterSpacing="0.1"
                    android:textSize="16dp" />
            </LinearLayout>



            <LinearLayout
                android:id="@+id/ly1"
                android:layout_below="@+id/ly16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@drawable/arredondado"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/pass_icon" />

                <EditText
                    android:id="@+id/senha2_registro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/primary_text"
                    android:maxLength="16"
                    android:textColorHint="@color/secondary_text"
                    android:background="#00000000"
                    android:hint="CONFIRMA SENHA"
                    android:inputType="textPassword"
                    android:letterSpacing="0.1"
                    android:textSize="16dp" />
            </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:gravity="bottom"
            android:orientation="vertical"
            android:layout_below="@+id/ly1"
            android:paddingLeft="60dp"
            android:paddingRight="60dp">

            <Button
                android:id="@+id/b_cadastrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:text="Cadastrar"
                android:textSize="18dp"
                android:background="?android:attr/selectableItemBackground"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/link_voltar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:letterSpacing="0.1"
                android:clickable="true"
                android:onClick="voltar"
                android:text="Já tem uma conta ?"
                android:textColor="#0d0056" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
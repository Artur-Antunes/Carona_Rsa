<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView2"
    android:layout_gravity="center_horizontal" >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.com.rsa.carona.carona_rsa.Registro2">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/c_imagem"
        android:src="@drawable/user"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Galeria"
        android:id="@+id/b_galeria"
        android:layout_below="@+id/c_imagem"
        android:layout_alignEnd="@+id/c_imagem" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAMERA"
        android:id="@+id/b_camera"
        android:layout_below="@+id/c_imagem"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_nome"
        android:layout_below="@+id/b_camera"
        android:singleLine="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:hint="NOME" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/c_sobrenome"
        android:singleLine="true"
        android:layout_below="@+id/tv_nome"
        android:layout_centerHorizontal="true"
        android:hint="SOBRENOME" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SALVAR"
        android:id="@+id/b_salvar"
        android:layout_below="@+id/c_sobrenome"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
</ScrollView>

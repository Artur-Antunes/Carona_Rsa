<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView5"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true" >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="br.com.rsa.carona.carona_rsa.ExibirDadosUsuarioActivity">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:id="@+id/foto"
            android:src="@drawable/user"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="false" />
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_below="@+id/foto"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Matricula"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18dp"
                android:id="@+id/textView14"
                android:layout_gravity="center_vertical"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="13202014"
                android:textSize="15dp"
                android:id="@+id/exibirMatriculaValor"
                android:layout_below="@+id/textView14"
                android:layout_alignParentStart="true" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/view1"
                android:layout_below="@id/exibirMatriculaValor"
                android:layout_alignParentStart="true"
                android:layout_marginTop="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Sexo"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18dp"
                android:id="@+id/tv15"
                android:layout_gravity="center_vertical"
                android:layout_above="@+id/exibirSexoValor"
                android:layout_marginRight="10dp"
                android:layout_alignEnd="@+id/textView26"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="SEXO"
                android:textSize="15dp"
                android:id="@+id/exibirSexoValor"
                android:layout_above="@+id/textView15"
                android:layout_marginRight="10dp"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Nome"
                android:textSize="18dp"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/textView15"
                android:layout_gravity="center_vertical"
                android:layout_below="@+id/exibirMatriculaValor"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="NOME"
                android:textSize="15dp"
                android:id="@+id/exibirNomeValor"
                android:layout_below="@+id/textView15"
                android:layout_alignParentStart="true" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/view2"
                android:layout_below="@id/exibirNomeValor"
                android:layout_alignParentStart="true"
                android:layout_marginTop="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="E-Mail"
                android:textSize="18dp"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/textView20"
                android:layout_gravity="center_vertical"
                android:layout_below="@+id/exibirNomeValor"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="EMIAL@EMAIL.COM"
                android:id="@+id/exibirEmailValor"
                android:layout_below="@+id/textView20"
                android:layout_alignParentStart="true"
                android:textSize="15dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/view3"
                android:layout_below="@id/exibirEmailValor"
                android:layout_alignParentStart="true"
                android:layout_marginTop="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Telefone"
                android:textSize="18dp"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/textView18"
                android:layout_gravity="center_vertical"
                android:layout_below="@+id/exibirEmailValor"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="9999999999"
                android:id="@+id/exibirTelefoneValor"
                android:textSize="15dp"
                android:layout_below="@+id/textView18"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="CNH"
                android:textSize="18dp"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/textView26"
                android:layout_gravity="center_vertical"
                android:layout_alignTop="@+id/textView18"
                android:layout_marginRight="10dp"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="SIM"
                android:id="@+id/exibirCnhValor"
                android:textSize="15dp"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="10dp"
                android:layout_alignEnd="@+id/exibirSexoValor"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>
    </RelativeLayout>
</ScrollView>




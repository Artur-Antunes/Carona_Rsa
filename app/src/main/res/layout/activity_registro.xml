<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView3" >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Faça o seu Registro e Aproveite"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <LinearLayout
            android:id="@+id/LinearLayout02"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_below="@+id/textView"
            android:layout_marginTop="10dp"
            android:layout_alignParentStart="true">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Matricula"
                android:inputType="date"
                android:id="@+id/matricula_registro"
                android:layout_weight="2"
                android:layout_alignParentTop="true"
                 />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CNH"
                android:textOff="NÃO"
                android:textOn="SIM"
                android:id="@+id/cnh_registro"
                android:checked="true" />

        </LinearLayout>




        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nome_registro"
            android:hint="Nome"
            android:layout_below="@+id/LinearLayout02"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Sobrenome"
            android:ems="10"
            android:id="@+id/sobrenome_registro"
            android:paddingTop="20dp"
            android:layout_below="@+id/nome_registro"
            android:layout_alignParentRight="true" />

        <Spinner
            android:id="@+id/sexo_registro"
            android:layout_width="match_parent"
            android:layout_below="@+id/sobrenome_registro"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:prompt="@string/sexo_usuario"
            android:layout_marginBottom="10dp">
        </Spinner>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/telefone_registro"
            android:hint="telefone"
            android:paddingTop="20dp"
            android:layout_below="@+id/sexo_registro"
            android:layout_alignParentEnd="true"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="E-mail"
            android:id="@+id/email_registro"
            android:paddingTop="20dp"
            android:layout_below="@+id/telefone_registro"
            android:layout_alignParentRight="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Senha"
            android:id="@+id/senha_registro"
            android:inputType="textPassword"
            android:paddingTop="20dp"
            android:layout_below="@+id/email_registro"
            android:layout_alignParentRight="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirmar Senha"
            android:inputType="textPassword"
            android:id="@+id/senha2_registro"
            android:paddingTop="20dp"
            android:layout_below="@+id/senha_registro"
            android:layout_alignParentRight="true" />



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cadastrar"
            android:id="@+id/b_cadastrar"
            android:layout_below="@+id/senha2_registro"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</ScrollView>

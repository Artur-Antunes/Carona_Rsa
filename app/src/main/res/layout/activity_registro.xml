<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView3" >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="FaÃ§a o seu Registro e Aproveite"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nome_registro"
            android:hint="Nome          "
            android:paddingTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Sobrenome"
            android:ems="10"
            android:id="@+id/sobrenome_registro"
            android:paddingTop="20dp"
            android:layout_below="@+id/nome_registro"
            android:layout_alignParentRight="true" />

        <Spinner
            android:id="@+id/sexo_registro"
            android:layout_width="match_parent"
            android:layout_below="@+id/sobrenome_registro"
            android:layout_height="wrap_content"
            android:prompt="@string/sexo_usuario" >
        </Spinner>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/telefone_registro"
            android:hint="telefone"
            android:paddingTop="20dp"
            android:layout_below="@+id/sexo_registro"
            android:layout_alignParentEnd="true"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Matricula"
            android:inputType="date"
            android:id="@+id/matricula_registro"
            android:paddingTop="20dp"
            android:layout_below="@+id/telefone_registro"
            android:layout_alignParentRight="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="E-mail"
            android:id="@+id/email_registro"
            android:paddingTop="20dp"
            android:layout_below="@+id/matricula_registro"
            android:layout_alignParentRight="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Senha"
            android:id="@+id/senha_registro"
            android:inputType="textPassword"
            android:paddingTop="20dp"
            android:layout_below="@+id/email_registro"
            android:layout_alignParentRight="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirmar Senha"
            android:inputType="textPassword"
            android:id="@+id/senha2_registro"
            android:paddingTop="20dp"
            android:layout_below="@+id/senha_registro"
            android:layout_alignParentRight="true" />

        <Spinner
            android:id="@+id/cnh_registro"
            android:layout_width="match_parent"
            android:layout_below="@+id/senha2_registro"
            android:layout_height="wrap_content"
            android:prompt="@string/cnh_usuario" >
        </Spinner>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cadastrar"
            android:id="@+id/b_cadastrar"
            android:layout_below="@+id/cnh_registro"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</ScrollView>

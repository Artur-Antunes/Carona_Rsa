            android:layout_below="@+id/textView27"
            android:layout_alignStart="@+id/view2"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="MATRÍCULA"
            android:id="@+id/textView25"
            android:layout_below="@+id/tv_email"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="13202014"
            android:id="@+id/tv_matricula"
            android:layout_below="@+id/textView25"
            android:layout_alignStart="@+id/tv_nome"
            android:layout_alignEnd="@+id/textView22" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="TELEFONE"
            android:id="@+id/textView30"
            android:layout_above="@+id/tv_matricula"
            android:layout_toEndOf="@+id/textView22" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="089981106513"
            android:id="@+id/tv_telefone"
            android:layout_below="@+id/textView30"
            android:layout_toEndOf="@+id/tv_matricula" />


            android:id="@+id/tv_email"
            android:layout_below="@+id/tv_nome"
            android:layout_alignStart="@+id/tv_nome" />



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SOLICITAR CARONA"
            android:id="@+id/b_solicitar"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/caixa_participantes" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="POSSUI CNH"
            android:id="@+id/tv_cnh"
            android:layout_below="@+id/tv_matricula"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/titulo"
            android:background="@color/color1"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_below="@+id/tv_cnh">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="PARTICIPANTE"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="12dp"

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView5"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true" >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@color/color3"
        android:layout_height="match_parent"
        tools:context="br.com.rsa.carona.carona_rsa.ExibirDadosUsuarioActivity">

        <ImageButton
            android:id="@+id/button_editarImagem"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/meio_transparente"
            android:src="@drawable/icon_edit_b"
            />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:id="@+id/editar_foto"
            android:src="@drawable/user"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="false" />

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_below="@+id/editar_foto"
            android:layout_alignParentStart="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Matricula"
                android:textSize="18dp"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/textView14"
                android:layout_gravity="center_vertical"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="13202014"
                android:id="@+id/editarMatriculaValor"
                android:layout_below="@+id/textView14"
                android:layout_alignParentStart="true" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/view1"
                android:layout_below="@id/editarMatriculaValor"
                android:layout_alignParentStart="true"
                android:layout_marginTop="2dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Sexo"
                android:textSize="18dp"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/textView142"
                android:layout_below="@id/editarMatriculaValor"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_vertical"
                android:layout_alignParentStart="true" />
            <Spinner
                android:id="@+id/etSexoUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:prompt="@string/sexo_usuario"
                android:layout_below="@+id/textView142">
            </Spinner>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/view22"
                android:layout_below="@id/etSexoUsuario"
                android:layout_alignParentStart="true"
                android:layout_marginTop="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Nome"
                android:textSize="18dp"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/textView15"
                android:layout_gravity="center_vertical"
                android:layout_below="@+id/etSexoUsuario"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="NOME"
                android:id="@+id/editarNomeValor"
                android:layout_below="@+id/textView15"
                android:layout_alignParentStart="true"
                android:textSize="18dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/view2"
                android:layout_below="@id/editarNomeValor"
                android:layout_alignParentStart="true"
                android:layout_marginTop="2dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Sobrenome"
                android:textSize="18dp"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/textView16"
                android:layout_gravity="center_vertical"
                android:layout_below="@+id/view2"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="SOBRENOME"
                android:id="@+id/editarSobrenomeValor"
                android:layout_below="@+id/textView16"
                android:layout_alignParentStart="true"
                android:textSize="18dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/view7"
                android:layout_below="@id/editarSobrenomeValor"
                android:layout_alignParentStart="true"
                android:layout_marginTop="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="E-Mail"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/textView20"
                android:textSize="18dp"
                android:layout_gravity="center_vertical"
                android:layout_below="@+id/editarSobrenomeValor"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="EMIAL@EMAIL.COM"
                android:id="@+id/editarEmailValor"
                android:layout_below="@+id/textView20"
                android:layout_alignParentStart="true"
                android:textSize="18dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/view3"
                android:layout_below="@id/editarEmailValor"
                android:layout_alignParentStart="true"
                android:layout_marginTop="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Telefone"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/textView18"
                android:textSize="18dp"
                android:layout_gravity="center_vertical"
                android:layout_below="@+id/editarEmailValor"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="9999999999"
                android:id="@+id/editarTelefoneValor"
                android:layout_below="@+id/textView18"
                android:layout_alignParentStart="true" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="CNH"
                android:textSize="18dp"
                android:textOff="NÃO"
                android:textOn="SIM"
                android:id="@+id/editarCnhValor"
                android:layout_alignParentRight="true"
                android:layout_alignRight="@+id/textView14"

                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Salvar"
                android:textColor="@color/btnConfirmar"
                android:textStyle="bold"
                android:id="@+id/b_salvar_alteracoes"
                android:background="@drawable/cor_botao"
                android:layout_below="@+id/editarTelefoneValor"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp" />
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>
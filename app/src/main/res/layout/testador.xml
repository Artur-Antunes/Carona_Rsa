            android:layout_alignStart="@+id/textView22" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:id="@+id/view2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/tv_tipoVeiculo"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="TIPO DE VEICULO"
            android:id="@+id/textView21"
            android:layout_below="@+id/tv_ponto"
            android:layout_alignStart="@+id/tv_ponto"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="CARRO"
            android:id="@+id/tv_tipoVeiculo"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/textView21"
            android:layout_alignStart="@+id/textView21" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="STATUS"
            android:id="@+id/textView23"
            android:layout_marginLeft="20dp"
            android:layout_alignTop="@+id/textView21"
            android:layout_alignEnd="@+id/textView19" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"

<?xml version="1.0" encoding="utf-8"?>


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="br.com.rsa.carona.carona_rsa.ExibirDadosUsuarioActivity">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:id="@+id/foto"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/foto"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_alignParentStart="true">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="MATRICULA"
            android:id="@+id/textView14"
            android:layout_gravity="center_vertical"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="13202014"
            android:id="@+id/exibirMatriculaValor"
            android:layout_below="@+id/textView14"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="SEXO"
            android:id="@+id/tv15"
            android:layout_gravity="center_vertical"
            android:layout_alignStart="@+id/exibirSexoValor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="SEXO"
            android:id="@+id/exibirSexoValor"
            android:layout_marginEnd="92dp"
            android:layout_alignTop="@+id/exibirMatriculaValor"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="NOME"
            android:id="@+id/textView15"
            android:layout_gravity="center_vertical"
            android:layout_below="@+id/exibirMatriculaValor"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="NOME COMPLETO DA PESSOA"
            android:id="@+id/exibirNomeValor"
            android:layout_below="@+id/textView15"
            android:layout_alignParentStart="true"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="E-MAIL"
            android:id="@+id/textView20"
            android:layout_gravity="center_vertical"
            android:layout_below="@+id/exibirNomeValor"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="EMIAL@EMAIL.COM"
            android:id="@+id/exibirEmailValor"
            android:layout_below="@+id/textView20"
            android:layout_alignParentStart="true"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="TELEFONE"
            android:id="@+id/textView18"
            android:layout_gravity="center_vertical"
            android:layout_below="@+id/exibirEmailValor"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="9999999999"
            android:id="@+id/exibirTelefoneValor"
            android:layout_below="@+id/textView18"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="CNH"
            android:id="@+id/textView26"
            android:layout_gravity="center_vertical"
            android:layout_below="@+id/exibirEmailValor"
            android:layout_alignStart="@+id/exibirSexoValor"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="SIM"
            android:id="@+id/exibirCnhValor"
            android:layout_below="@+id/textView26"
            android:layout_alignStart="@+id/textView26" />

    </RelativeLayout>
    </RelativeLayout>
    </ScrollView>




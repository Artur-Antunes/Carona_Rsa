<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.com.rsa.carona.carona_rsa.ExibirDadosUsuarioActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Matricula:"
        android:id="@+id/exibirMatriculaLabel"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/exibirMatriculaValor"
        android:layout_alignTop="@+id/exibirMatriculaLabel"
        android:layout_toEndOf="@+id/exibirMatriculaLabel"
        android:layout_marginStart="64dp"
        android:text="texto" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nome:"
        android:id="@+id/exibirNomeLabel"
        android:layout_below="@+id/exibirMatriculaLabel"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sobrenome:"
        android:id="@+id/exibirSobrenomeLabel"
        android:layout_below="@+id/exibirNomeLabel"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/exibirSobrenomeValor"
        android:layout_alignBottom="@+id/exibirSobrenomeLabel"
        android:layout_alignStart="@+id/exibirMatriculaValor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sexo :"
        android:id="@+id/exibirSexoLabel"
        android:layout_below="@+id/textView15"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/exibirSexoValor"
        android:layout_above="@+id/exibirCNHlabel"
        android:layout_alignStart="@+id/exibirTelefoneValor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CNH :"
        android:id="@+id/exibirCNHlabel"
        android:layout_below="@+id/exibirSexoLabel"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/exibirCnhValor"
        android:layout_alignBaseline="@+id/exibirCNHlabel"
        android:layout_alignBottom="@+id/exibirCNHlabel"
        android:layout_alignStart="@+id/exibirSexoValor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/exibirNomeValor"
        android:layout_alignTop="@+id/exibirNomeLabel"
        android:layout_alignStart="@+id/exibirMatriculaValor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Telefone :"
        android:id="@+id/exibirTelefoneText"
        android:layout_below="@+id/exibirSobrenomeLabel"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/exibirTelefoneValor"
        android:layout_alignBottom="@+id/exibirTelefoneText"
        android:layout_alignEnd="@+id/exibirSobrenomeValor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="E-Mail :"
        android:id="@+id/textView15"
        android:layout_below="@+id/exibirTelefoneText"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/exibirEmailValor"
        android:layout_alignBottom="@+id/textView15"
        android:layout_alignStart="@+id/exibirTelefoneValor" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar"
        android:id="@+id/buttonEditarExibir"
        android:layout_centerVertical="true"
        android:onClick="editarDados"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
